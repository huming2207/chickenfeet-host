{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2021",
      "noImplicitAny": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictPropertyInitialization": false,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
        "*": [
          "node_modules/*",
        ]
      },
      "typeRoots": [
        "./src/types",
        "./node_modules/@types"
      ],
      "strict": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      // "strictBindCallApply": true,
      "lib": ["ES2021"]
    },
    "include": [
      "src/**/*"
    ],
  }